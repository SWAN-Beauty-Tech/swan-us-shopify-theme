<style>
  /* Moved all inline styles to CSS classes for better mobile/desktop management */
  
  .partnership-benefits-section {
    width: 100%;
    min-height: 100vh;
    padding: 24px;
  }

  .benefits-container {
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #e7aeb1;
    border-radius: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 80px 0;
    background-image: url('{{ section.settings.background_image | image_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .benefits-content {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .benefits-title {
    color: white;
    font-size: 48px;
    font-weight: 100;
    line-height: 1;
    filter: blur(40px);
    margin-bottom: 48px;
  }

  .benefit-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .icon-container {
    background-color: white;
    padding: 16px;
    border-radius: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .benefit-icon {
    width: 24px;
    height: 24px;
  }

  .benefit-text {
    color: white;
    font-size: 16px;
    font-weight: 100;
    line-height: 1;
    filter: blur(40px);
  }

  /* Added comprehensive mobile styles */
  @media (max-width: 768px) {
    .partnership-benefits-section {
      min-height: 60vh;
      padding: 24px;
    }

    .benefits-container {
      padding: 24px 0;
      border-radius: 20px;
    }
    
    .benefits-title {
      font-size: 22px;
      margin-bottom: 16px;
    }
    
    .benefits-content {
      gap: 20px;
    }

    .icon-container {
      padding: 12px;
      border-radius: 12px;
    }
    
    .benefit-icon {
      width: 16px;
      height: 16px;
    }

    .benefit-text {
      font-size: 14px;
    }
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    gsap.registerPlugin(ScrollTrigger);
    
    const title = document.querySelector('.benefits-title');
    const items = document.querySelectorAll('.benefit-text');
    
    // Animate title
    gsap.to(title, {
      scrollTrigger: {
        trigger: title,
        scrub: 1,
        start: "top 100%",
        end: "bottom 70%",
      },
      filter: "blur(0px)",
    });
    
    // Animate each benefit item
    items.forEach((item) => {
      gsap.to(item, {
        scrollTrigger: {
          trigger: item,
          scrub: 1,
          start: "top 100%",
          end: "bottom 70%",
        },
        filter: "blur(0px)",
      });
    });
  });
</script>

