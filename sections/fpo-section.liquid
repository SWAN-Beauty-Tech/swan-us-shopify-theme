<div class="fpo-section-wrapper">
  <section class="fpo-section">
    <!-- Mobile only text content -->
    <div class="fpo-mobile-content">
      <div>
        <h2 class="fpo-title">
          {{ section.settings.title_line_1 }}
          <br />
          {{ section.settings.title_line_2 }}
        </h2>
        <p class="fpo-subtitle">{{ section.settings.subtitle }}</p>
      </div>
    </div>

    <!-- Main content with video -->
    <div class="fpo-content">
      <div class="fpo-image-wrapper">
        {% if section.settings.video != blank %}
          <video 
            src="{{ section.settings.video }}"
            class="fpo-image fpo-video"
            muted
            playsinline
            autoplay
          ></video>
        {% endif %}
      </div>
      
      <!-- Updated text overlay to use single paragraph with line breaks -->
      <div class="fpo-text-overlay">
        <p class="fpo-overlay-text">{{ section.settings.overlay_text }}</p>
      </div>
    </div>
  </section>
</div>

<style>
  .fpo-section-wrapper {
    width: 100%;
    height: 100dvh;
    padding: 0 24px;
    margin-top: 24px;
  }

  .fpo-section {
    width: 100%;
    height: 100%;
    position: relative;
  }

  /* Mobile only text content */
  .fpo-mobile-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 16px 24px 24px;
    position: relative;
    z-index: 50;
  }

  .fpo-title {
    font-size: 1.875rem;
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 24px;
    color: #6b7280;
    text-align: center;
  }

  .fpo-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    font-style: italic;
    font-weight: 300;
    text-align: center;
  }

  /* Main content */
  .fpo-content {
    width: 100%;
    height: 80vh;
    text-align: center;
    background-color: {{ section.settings.background_color }};
    border-radius: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .fpo-image-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
  }

  .fpo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Updated text overlay to match design - sentence case, not uppercase */
  .fpo-text-overlay {
    position: absolute;
    z-index: 20;
    text-align: center;
    padding: 32px;
    max-width: 90%;
  }

  .fpo-overlay-text {
    font-size: 60px;
    font-weight: 300;
    line-height: 1.4;
    color: {{ section.settings.overlay_text_color }};
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    white-space: pre-line;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .fpo-section-wrapper {
      height: 100dvh;
      padding-bottom: 24px;
    }

    .fpo-mobile-content {
      display: none;
    }

    .fpo-content {
      height: 100%;
    }

    .fpo-title {
      font-size: 3rem;
    }

    .fpo-subtitle {
      font-size: 1.5rem;
    }

    .fpo-text-overlay {
      max-width: 800px;
      padding: 48px;
    }

    .fpo-overlay-text {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .fpo-title {
      font-size: 3.75rem;
    }

    .fpo-overlay-text {
      font-size: 2.75rem;
    }
  }
</style>

<!-- Improved Intersection Observer script for video autoplay -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const videos = document.querySelectorAll('.fpo-video');
    
    videos.forEach(video => {
      // Disable looping
      video.loop = false;
      
      // Pause when video ends
      video.addEventListener('ended', function() {
        this.pause();
      });
      
      // Intersection Observer to play video when section is visible
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Force play when visible
            video.play().catch(err => {
              console.log('[v0] Video autoplay blocked by browser:', err);
              // Try again after user interaction
              document.addEventListener('click', () => video.play(), { once: true });
            });
          } else {
            video.pause();
          }
        });
      }, {
        threshold: 0.3
      });
      
      observer.observe(video);
    });
  });
</script>

