<div class="fpo-section-wrapper">
  <section class="fpo-section">
    <!-- Mobile only text content -->
    <div class="fpo-mobile-content">
      <div>
        <h2 class="fpo-title">
          {{ section.settings.title_line_1 }}
          <br />
          {{ section.settings.title_line_2 }}
        </h2>
        <p class="fpo-subtitle">{{ section.settings.subtitle }}</p>
      </div>
    </div>

    <!-- Main content with image or video -->
    <div class="fpo-content">
      <div class="fpo-image-wrapper">
        {% if section.settings.show_video and section.settings.video != blank %}
          <video 
            src="{{ section.settings.video }}"
            class="fpo-image"
            autoplay
            muted
            loop
            playsinline
          ></video>
        {% elsif section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | image_url: width: 2000 }}"
            alt="{{ section.settings.image.alt | default: section.settings.title_line_1 }}"
            class="fpo-image"
            loading="lazy"
          />
        {% else %}
          <img 
            src="{{ 'placeholder.svg' | asset_url }}"
            alt="Placeholder"
            class="fpo-image"
          />
        {% endif %}
      </div>
      
      <!-- Added text overlay for video/image -->
      <div class="fpo-text-overlay">
        <h2 class="fpo-overlay-title">{{ section.settings.overlay_title }}</h2>
        <p class="fpo-overlay-description">{{ section.settings.overlay_description }}</p>
      </div>
    </div>
  </section>
</div>

<style>
  .fpo-section-wrapper {
    width: 100%;
    height: 100dvh;
    padding: 0 24px;
    margin-top: 24px;
  }

  .fpo-section {
    width: 100%;
    height: 100%;
    position: relative;
  }

  /* Mobile only text content */
  .fpo-mobile-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 16px 24px 24px;
    position: relative;
    z-index: 50;
  }

  .fpo-title {
    font-size: 1.875rem;
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 24px;
    color: #6b7280;
    text-align: center;
  }

  .fpo-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    font-style: italic;
    font-weight: 300;
    text-align: center;
  }

  /* Main content */
  .fpo-content {
    width: 100%;
    height: 80vh;
    text-align: center;
    background-color: {{ section.settings.background_color }};
    border-radius: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .fpo-image-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
  }

  .fpo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Text overlay styles */
  .fpo-text-overlay {
    position: absolute;
    z-index: 20;
    text-align: center;
    padding: 32px;
    max-width: 90%;
    color: {{ section.settings.overlay_text_color }};
  }

  .fpo-overlay-title {
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1.4;
    margin-bottom: 16px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .fpo-overlay-description {
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.6;
    font-style: italic;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .fpo-section-wrapper {
      height: 100dvh;
      padding-bottom: 24px;
    }

    .fpo-mobile-content {
      display: none;
    }

    .fpo-content {
      height: 100%;
    }

    .fpo-title {
      font-size: 3rem;
    }

    .fpo-subtitle {
      font-size: 1.5rem;
    }

    /* Larger text overlay for desktop */
    .fpo-text-overlay {
      max-width: 800px;
      padding: 48px;
    }

    .fpo-overlay-title {
      font-size: 2.5rem;
      margin-bottom: 24px;
    }

    .fpo-overlay-description {
      font-size: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .fpo-title {
      font-size: 3.75rem;
    }

    /* Even larger text for large screens */
    .fpo-overlay-title {
      font-size: 3rem;
    }

    .fpo-overlay-description {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "FPO Section",
  "settings": [
    {
      "type": "text",
      "id": "title_line_1",
      "label": "Title Line 1",
      "default": "Intelligence in its"
    },
    {
      "type": "text",
      "id": "title_line_2",
      "label": "Title Line 2",
      "default": "best light"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Smart never looked so good"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "video",
      "label": "Video URL",
      "info": "Upload video to Files in Shopify admin, then paste the URL here"
    },
    {
      "type": "checkbox",
      "id": "show_video",
      "label": "Show Video Instead of Image",
      "default": false,
      "info": "Toggle this on to display the video instead of the image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ec4899"
    },
    {
      "type": "textarea",
      "id": "overlay_title",
      "label": "Overlay Title",
      "default": "Introducing SWAN in Black and White â€” two timeless finishes, one transformative experience."
    },
    {
      "type": "textarea",
      "id": "overlay_description",
      "label": "Overlay Description",
      "default": "Designed for creators. Built for beauty. Ready for every partnership ahead."
    },
    {
      "type": "color",
      "id": "overlay_text_color",
      "label": "Overlay Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "FPO Section"
    }
  ]
}
{% endschema %}
