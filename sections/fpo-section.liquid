<div class="fpo-section-wrapper">
  <section class="fpo-section">
    <!-- Main content with video -->
    <div class="fpo-content">
      <div class="fpo-image-wrapper">
        {% if section.settings.video != blank %}
          <video 
            src="{{ section.settings.video }}"
            class="fpo-image fpo-video"
            muted
            playsinline
            autoplay
          ></video>
        {% endif %}
      </div>
      
      <!-- Updated to use blocks for each line instead of single text field -->
      <div class="fpo-text-overlay">
        {% for block in section.blocks %}
          {% if block.settings.text_line != blank %}
            <p class="fpo-overlay-text">{{ block.settings.text_line }}</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
</div>

<style>
  .fpo-section-wrapper {
    width: 100%;
    height: 100dvh;
    padding: 0 24px;
    margin-top: 24px;
  }

  .fpo-section {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .fpo-content {
    width: 100%;
    height: 80vh;
    text-align: center;
    background-color: {{ section.settings.background_color }};
    border-radius: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .fpo-image-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .fpo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .fpo-text-overlay {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 32px;
    max-width: 90%;
    pointer-events: none;
  }

  .fpo-overlay-text {
    font-size: 24px;
    font-weight: 300;
    line-height: 1.4;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    margin: 0;
    color: {{ section.settings.overlay_text_color }};
  }

  @media (min-width: 768px) {
    .fpo-section-wrapper {
      height: 100dvh;
      padding-bottom: 24px;
    }

    .fpo-content {
      height: 100%;
    }

    .fpo-text-overlay {
      max-width: 1200px;
      padding: 48px;
    }

    .fpo-overlay-text {
      font-size: 60px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const videos = document.querySelectorAll('.fpo-video');
    
    videos.forEach(video => {
      video.loop = false;
      
      video.addEventListener('ended', function() {
        this.pause();
      });
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            video.play().catch(err => {
              console.log('[v0] Video autoplay blocked by browser:', err);
              document.addEventListener('click', () => video.play(), { once: true });
            });
          } else {
            video.pause();
          }
        });
      }, {
        threshold: 0.3
      });
      
      observer.observe(video);
    });
  });
</script>

