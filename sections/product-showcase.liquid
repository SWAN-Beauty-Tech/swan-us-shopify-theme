<section class="w-full px-6 pb-6">
        <div class="relative min-h-100 rounded-4xl overflow-hidden  z-30 ">
              {% if section.settings.video != blank %}
          <video  class="absolute inset-0 w-full h-full object-cover object-right dvideo" playsinline autoplay muted>
            <source src="{{ section.settings.video }}" type="video/mp4">
          </video>
            {%endif %}
            {% if section.settings.videom != blank %}
          <video  class=" inset-0 w-full h-full object-cover object-right mvideo" playsinline autoplay muted>
            <source src="{{ section.settings.videom }}" type="video/mp4">
          </video>
           {%endif %}
        
          <div class="absolute text-section-showcase top-half translate-y-half left-100" style="width: auto; max-width: 60%;">
            <div class="flex flex-col gap-6 ">
                 {% for block in section.blocks %}
                {% if block.settings.title != blank %}
               <div class="feature-text" >
                <h2 class="text-white " style="color:{{ block.settings.color }}" >{{block.settings.title}}</h2>
              </div>
                {% endif %}
             {% endfor %}

            </div>
          </div>
          <img alt="Swan Mirror" class="absolute small-hide z-20 select-none pointer-events-none swan-logoimg" draggable="false" src="{{ 'logo-s.png'| asset_url }}" >
        </div>
      </section>
      <style>
.product-showcase{

    padding:0 20px 24px 20px;
}
        .h-100{
    height:100vh
  }
  .relative{
    position:relative
  }
  .min-h-100{
    min-height: 100vh;
  }
  .rounded-4xl{
    border-radius:32px
  }
  .overflow-hidden {
    overflow: hidden;
}
.object-right {
  object-position: right;
}
.object-cover {
  object-fit: cover;
}
.w-full {
  width: 100%;
}
.h-full {
  height: 100%;
}
.absolute {
  position: absolute;
}
.top-half{
  top: 50%;
}
.z-30 {
 
}
.translate-y-half{
  translate:0px -50%
}
.flex{
  display:flex
}
.flex-col{
  flex-direction:column
}
.gap-6{
  gap:24px
}
.feature-text h2 {
  margin: 0;
  font-size: 38px;
  font-family: 'area_normalthin';
  font-weight:300;
}
.text-white {
  color: #fff;
}
.left-100{
  left:100px
}
.swan-logoimg {
  height: 220px;
  width: auto;
  left: 40px;
  top: 40px;
  opacity: 0.2;
}
.justify-content-center{
  justify-content:center
}
.align-items-center{
  align-items:center
}
.d-flex{
  display:flex
}
.mvideo{
  display:none;
}
@media screen and (max-width: 1600px) {
    .feature-text h2{
        font-size:32px;
        line-height:40px;
    }

  }
  @media screen and (max-width: 1440px) {
    .feature-text h2{
        font-size:29px;
        line-height:36px;
    }

  }
   @media screen and (max-width: 1366px) {
    .feature-text h2{
        font-size:24px;
    }
  }
@media screen and (max-width: 1024px) {
  .dvideo{
  display:none;
}
.mvideo{
  display:block;
  object-position:bottom;
}
  .hero-image-shocase{
    width:100%;
    display:block;
    max-height:488px;
  }
  .text-section-showcase{
        left: 0;
        top: 0;
        width: 100% !important;
        max-width: 100% !important;
        translate: none;
        border-radius:0 0 20px 20px;
        padding:25px 15px;
  }
      .feature-text h2 {
        font-size: 40px;
        text-align:center;
        line-height:80px;
    }
    .gap-6 {
    gap: 0;
}
.min-h-100 {
    min-height: 100%;
}
.product-showcase .rounded-4xl{
  background-color:#b8bac1;
  border-radius:30px;
  padding-top:0;
  min-height:80vh
}
.product-showcase video.medium-hide{
  display:block;
  border:none;
}
}
@media screen and (max-width: 820px) {
  .feature-text h2 {
        font-size: 35px;
        text-align:center;
        line-height:70px;
    }
  }
@media screen and (max-width: 767px) {
  .feature-text h2 {
        font-size: 15px;
        text-align:center;
        line-height:26px;
        letter-spacing:0;
    }
  }
</style>
<script>
   gsap.from(".feature-text", {
    scrollTrigger: {
      trigger: ".feature-text",
      start: "top 85%",       
      toggleActions: "play none none reverse"
    },
    x: 100,                
    opacity: 0,              
    duration: 1,
    ease: "power3.out",
    stagger: 0.3             
  });
 
</script>
         {% schema %}
{
  "name": "Product Showcase",
  "class": "product-showcase",
  "tag": "section",
  "settings": [
      {
      "type": "url",
      "id": "video",
      "label": "Video for desktop",
      "info": "Please upload video on file section and supply the url here"
    },
      {
      "type": "url",
      "id": "videom",
      "label": "Video for Mobile",
      "info": "Please upload video on file section and supply the url here"
    }
  ],
      "blocks": [
    {
      "type": "showcase",
      "name": "Product showcase",
      "settings": [
         {
          "type": "text",
          "id": "title",
          "label": "Name"
        },
        {
          "type": "color",
          "id": "color",
          "default": "#ffffff",
          "label": "Text Color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}