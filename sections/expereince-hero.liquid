   <link rel="preload" as="video" href="{{section.settings.video }}" type="video/mp4">

   <section class="experience-hero">
    <div class="hero-container">
      <!-- Headings -->
      <div class="hero-headings">
        <h1 class="fade-up">{{section.settings.title }}</h1>
        <p class="fade-up">{{ section.settings.desc }}</p>
      </div>

      <!-- Video area -->
      <div class="hero-video-wrap">
        <div class="video-container fade-up">
          <video
            src="{{section.settings.video }}"
            poster="{{section.settings.vposter }}"
            autoplay
            muted
            loop
            playsinline
            preload="metadata"
          ></video>
          <img src="{{ section.settings.mimage |  img_url:'master' }}" alt="Experience Hero" />
        </div>
      </div>
    </div>
  </section>
<style>
    
   .experience-hero-section-outer {
      width: 100%;
      padding: 20px 24px 24px 24px;
    }

    .hero-container {
      position: relative;
      background: #434043;
      text-align: center;
      overflow: hidden;
      border-radius:30px;
    }

    .hero-headings {
      padding: 56px 0 10px 0;
    }

    .hero-headings h1 {
      color: #fff;
      font-weight: 300;
      letter-spacing: 0;
      line-height: 1.1;
      font-size: 60px;
      font-family: 'area_normalthin';
      margin:0;
    }
    .hero-headings p{
    
        margin-bottom:0;
    }
    @media (min-width: 768px) {
      .hero-headings h1 {
        font-size: 60;
      }
    }
    @media (min-width: 1024px) {
      .hero-headings h1 {
        font-size: 60px;
      }
    }

    .hero-headings p {
      margin-top: 0.75rem;
      color: #d1d5db; /* gray-300 */
      font-size: 0.875rem;
    }
    @media (min-width: 768px) {
      .hero-headings p {
        font-size: 16px;
      }
    }

    .hero-video-wrap {
      position: relative;
      margin-top: 1.5rem;
      padding: 0 40px 40px;
    }


    .video-container {
      position: relative;
      width: 100%;
      overflow: hidden;
      border-radius: 30px;
      aspect-ratio: 16/9;
    }

    .video-container video {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .video-container img {
      width: 100%;
      height: auto;
      object-fit: contain;
      display: none;
    }

    @media (max-width: 767px) {
      .video-container video {
        display: none;
      }
      .video-container img {
        display: block;
      }
      .hero-headings h1{
        font-size:30px;
      }
      .hero-video-wrap{
       padding-bottom: 0;
        padding-left: 15px;
        padding-right: 15px;
      }
      .experience-hero-section-outer {
    width: 100%;
    padding: 0;
    margin-bottom:30px;
}
.hero-container{
  border-radius:0;
}
    }
  </style>
  <script>
    // Animate fade-in with GSAP
    gsap.fromTo(".fade-up", 
      { y: 50, opacity: 0, filter: "blur(10px)" },
      { y: 0, opacity: 1, filter: "blur(0px)", 
        duration: 0.8, ease: "power2.out", 
        stagger: 0.2, delay: 0.2 
      }
    );
  </script>
  {% schema %}
{
  "name": "Expereince Hero",
  "class": "experience-hero-section-outer",
  "tag": "section",
  "settings": [
     {
      "type": "url",
      "id": "video",
      "label": "Video for desktop",
      "info": "Please upload video on file section and supply the url here"
    },
     
    {
      "type": "image_picker",
      "id": "mimage",
      "label": "Mobile Image",
      "info": "Please upload image for mobile which will be visible in place of video"
    },
      {
      "type": "image_picker",
      "id": "vposter",
      "label": "Video Poster Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "Description"
    }
     

  ],
  "presets": [
    {
      "name": "Expereince Hero"
    }
  ]
}
{% endschema %}
