<link rel="preload" as="image" href="{{ section.settings.hero_image | image_url: width: 2000 }}">
<link rel="preload" as="image" href="{{ section.settings.hero_image_mobile | image_url: width: 1000 }}">

<section class="hero-partnership-wrapper" id="heroPartnership">
  {% if section.settings.hero_image != blank %}
  <img 
    class="hero-image-desktop" 
    src="{{ section.settings.hero_image | image_url: width: 2000 }}" 
    alt="{{ section.settings.image_alt | default: 'Hero Image' }}"
    loading="eager"
  >
  {% endif %}
  
  {% if section.settings.hero_image_mobile != blank %}
  <img 
    class="hero-image-mobile" 
    src="{{ section.settings.hero_image_mobile | image_url: width: 1000 }}" 
    alt="{{ section.settings.image_alt | default: 'Hero Image' }}"
    loading="eager"
  >
  {% endif %}

  <div class="hero-partnership-content">
    <h1>
      <span class="first-line">{{ section.settings.heading_line_1 }}</span>
      <span class="second-line">{{ section.settings.heading_line_2 }}</span>
    </h1>
    <p class="hero-description">{{ section.settings.description }}</p>
    <div class="hero-cta-wrapper">
      <a href="{{ section.settings.cta_link }}" class="hero-cta">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</section>

<style>
  /* Reescribiendo todos los estilos para que coincidan exactamente con las clases de Tailwind del React */
  
  /* Section: relative h-[150dvh] max-md:h-[120vh] overflow-hidden px-0 md:px-28 max-md:flex max-md:flex-col max-md:items-center max-md:justify-center max-md:pt-6 */
  .hero-partnership-wrapper {
    position: relative;
    height: 150dvh;
    overflow: hidden;
    padding-left: 0;
    padding-right: 0;
  }

  /* Desktop image: pointer-events-none absolute inset-y-0 right-0 h-full w-full object-cover max-md:hidden */
  .hero-image-desktop {
    pointer-events: none;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile image: pointer-events-none absolute md:inset-y-0 right-0 w-full top-0 h-[75%] object-cover md:hidden z-10 */
  .hero-image-mobile {
    pointer-events: none;
    position: absolute;
    right: 0;
    width: 100%;
    top: 0;
    height: 75%;
    object-fit: cover;
    display: none;
    z-index: 10;
  }

  /* Content div: absolute left-1/2 -translate-x-1/2 max-md:top-16 md:top-36 z-20 flex flex-col items-center justify-center max-md:px-3 max-md:mt-6 w-full */
  .hero-partnership-content {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 144px; /* md:top-36 = 9rem = 144px */
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  /* H1: font-thin text-white leading-[1.2] tracking-[-0.01em] text-[clamp(28px,4vw,96px)] text-center */
  .hero-partnership-content h1 {
    font-weight: 100;
    color: #ffffff;
    line-height: 1.2;
    letter-spacing: -0.01em;
    font-size: clamp(28px, 4vw, 96px);
    text-align: center;
    margin: 0;
  }

  .hero-partnership-content h1 span {
    display: block;
    opacity: 0;
    filter: blur(10px);
    transform: translateY(50px);
  }

  /* P: mt-4 text-white leading-[1.2] !font-thin text-xs md:text-lg text-center */
  .hero-description {
    margin-top: 16px; /* mt-4 = 1rem = 16px */
    color: #ffffff;
    line-height: 1.2;
    font-weight: 100;
    font-size: 12px; /* text-xs by default on mobile */
    text-align: center;
    opacity: 0;
    transform: translateY(50px);
    filter: blur(10px);
  }

  /* br: max-md:hidden */
  .hero-description br {
    display: none;
  }

  /* CTA wrapper: mt-6 max-md:mt-8 */
  .hero-cta-wrapper {
    margin-top: 24px; /* mt-6 = 1.5rem = 24px */
    opacity: 0;
    transform: translateY(50px);
    filter: blur(10px);
  }

  /* Button: py-4 px-7 rounded-full bg-primary-pink hover:bg-primary-pink/60 text-white text-sm !font-thin max-md:text-xs uppercase */
  .hero-cta {
    display: inline-block;
    padding-top: 16px; /* py-4 = 1rem = 16px */
    padding-bottom: 16px;
    padding-left: 28px; /* px-7 = 1.75rem = 28px */
    padding-right: 28px;
    border-radius: 9999px;
    background: #e7aeb1;
    color: white;
    font-size: 12px; /* max-md:text-xs by default */
    font-weight: 100;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s;
  }

  .hero-cta:hover {
    background: rgba(231, 174, 177, 0.6);
  }

  /* Mobile breakpoint: max-md (max-width: 768px) */
  @media screen and (max-width: 768px) {
    /* Section: max-md:h-[120vh] max-md:flex max-md:flex-col max-md:items-center max-md:justify-center max-md:pt-6 */
    .hero-partnership-wrapper {
      height: 120vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 24px; /* max-md:pt-6 = 1.5rem = 24px */
    }

    /* Desktop image: max-md:hidden */
    .hero-image-desktop {
      display: none;
    }

    /* Mobile image: visible on mobile, md:hidden removed so it shows */
    .hero-image-mobile {
      display: block;
    }

    /* Content: max-md:top-16 max-md:px-3 max-md:mt-6 */
    .hero-partnership-content {
      top: 64px; /* max-md:top-16 = 4rem = 64px */
      padding-left: 12px; /* max-md:px-3 = 0.75rem = 12px */
      padding-right: 12px;
      margin-top: 24px; /* max-md:mt-6 = 1.5rem = 24px */
    }

    /* Description: text-xs (already set, stays 12px) */
    /* br: max-md:hidden (already hidden) */

    /* CTA wrapper: max-md:mt-8 */
    .hero-cta-wrapper {
      margin-top: 16px; /* max-md:mt-8 = 2rem = 32px */
    }

    /* Button: max-md:text-xs (already set to 12px) */
  }

  /* Desktop breakpoint: md (min-width: 769px) */
  @media screen and (min-width: 769px) {
    /* Section: md:px-28 */
    .hero-partnership-wrapper {
      padding-left: 112px; /* md:px-28 = 7rem = 112px */
      padding-right: 112px;
    }

    /* Mobile image: md:hidden, md:inset-y-0 (not needed as it's hidden) */
    .hero-image-mobile {
      display: none;
    }

    /* Description: md:text-lg */
    .hero-description {
      font-size: 18px; /* md:text-lg = 1.125rem = 18px */
    }

    /* br: visible on desktop */
    .hero-description br {
      display: block;
    }

    /* Button: text-sm on desktop */
    .hero-cta {
      font-size: 14px; /* text-sm = 0.875rem = 14px */
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof gsap !== 'undefined') {
      gsap.to(".hero-partnership-content h1 span.first-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.4
      });

      gsap.to(".hero-partnership-content h1 span.second-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.4
      });

      gsap.to(".hero-partnership-content .hero-description", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.6
      });

      gsap.to(".hero-partnership-content .hero-cta-wrapper", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 1.0
      });
    } else {
      const elements = document.querySelectorAll('.hero-partnership-content h1 span, .hero-description, .hero-cta-wrapper');
      elements.forEach(el => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
        el.style.filter = 'blur(0)';
      });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Partnership",
  "class": "hero-partnership-section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (Desktop)",
      "info": "Recommended size: 2000x2000px or larger. Visible on desktop only."
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero Image (Mobile)",
      "info": "Recommended size: 1000x1500px. Visible on mobile only, covers top 75% of section."
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Powering the Future of"
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2",
      "default": "Beauty, Together."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Join the ecosystem where creators, brands, and retailers connect through intelligent beauty technology."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "BECOME A PARTNER"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Hero Partnership"
    }
  ]
}
{% endschema %}
