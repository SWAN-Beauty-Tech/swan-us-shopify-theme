<link rel="preload" as="image" href="{{ section.settings.hero_image | image_url: width: 2000 }}">
<div class="rel-mode">
  <div class="hero-image-wrap">
    {% if section.settings.hero_image != blank %}
    <img 
      class="hero-image" 
      src="{{ section.settings.hero_image | image_url: width: 2000 }}" 
      alt="{{ section.settings.image_alt | default: 'Hero Image' }}"
      loading="eager"
    >
    {% endif %}
  </div>
  <section class="hero-partnership" id="heroPartnership">
    <div class="hero-partnership-inner">
      <div class="hero-partnership-content">
        <h1>
          <span class="first-line">{{ section.settings.heading_line_1 }}</span>
          <span class="second-line"><em>{{ section.settings.heading_line_2 }}</em></span>
        </h1>
        <p class="hero-description">{{ section.settings.description }}</p>
        <a href="{{ section.settings.cta_link }}" class="hero-cta">{{ section.settings.cta_text }}</a>
      </div>
    </div>
  </section>
</div>

<style>
  .rel-mode {
    position: relative;
    height: 150vh;
    overflow: hidden;
  }

  .hero-image-wrap {
    pointer-events: none;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }

  .hero-image-wrap .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    position: absolute;
    pointer-events: none;
  }

  .hero-partnership {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
    opacity: 1;
    padding: 64px 128px;
  }

  .hero-partnership-inner {
    max-width: 1400px;
    width: 100%;
  }

  .hero-partnership-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-partnership-inner h1 {
    font-size: 96px;
    font-weight: 300;
    margin: 0 0 20px 0;
    line-height: 1.2;
    color: #ffffff;
    letter-spacing: -0.01em;
    max-width: 16ch;
  }

  .hero-partnership-inner h1 span {
    display: block;
    opacity: 0;
    filter: blur(10px);
    transform: translateY(50px);
  }

  .hero-partnership-inner h1 span.second-line em {
    font-style: italic;
    font-weight: 400;
  }

  .hero-description {
    color: #ffffff;
    font-size: 18px;
    margin-bottom: 24px;
    line-height: 1.45;
    transform: translateY(50px);
    filter: blur(10px);
    opacity: 0;
    max-width: 600px;
  }

  .hero-cta {
    display: inline-block;
    background: #e7aeb1;
    padding: 16px 28px;
    border-radius: 9999px;
    text-decoration: none;
    color: white;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: background 0.3s;
    transform: translateY(50px);
    filter: blur(10px);
    opacity: 0;
  }

  .hero-cta:hover {
    background: rgba(231, 174, 177, 0.6);
  }

  @media screen and (max-width: 1600px) {
    .hero-partnership-inner h1 {
      font-size: 80px;
    }

    .hero-description {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 1440px) {
    .hero-partnership-inner h1 {
      font-size: 72px;
    }

    .hero-partnership {
      padding: 64px 96px;
    }
  }

  @media screen and (max-width: 1366px) {
    .hero-partnership-inner h1 {
      font-size: 64px;
    }

    .hero-description {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 1024px) {
    .rel-mode {
      height: 80vh;
    }

    .hero-partnership {
      padding: 140px 24px 64px;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hero-partnership-inner h1 {
      font-size: 48px;
      line-height: 1.2;
    }

    .hero-description {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .hero-image-wrap .hero-image {
      object-position: center;
    }
  }

  @media screen and (max-width: 768px) {
    .hero-partnership-inner h1 {
      font-size: 32px;
    }

    .hero-description {
      font-size: 12px;
    }

    .hero-cta {
      font-size: 12px;
      padding: 14px 24px;
    }
  }

  @media screen and (max-width: 400px) {
    .hero-partnership {
      padding-top: 100px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const heroPartnership = document.getElementById('heroPartnership');
    
    if (typeof gsap !== 'undefined') {
      // Animate heading first line
      gsap.to(".hero-partnership-inner h1 span.first-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        delay: 0.3
      });

      // Animate heading second line
      gsap.to(".hero-partnership-inner h1 span.second-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        delay: 0.5
      });

      // Animate description
      gsap.to(".hero-partnership-inner .hero-description", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        delay: 0.7
      });

      // Animate CTA button
      gsap.to(".hero-partnership-inner .hero-cta", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        delay: 0.9
      });
    } else {
      // Fallback if GSAP is not loaded
      const elements = document.querySelectorAll('.hero-partnership-inner h1 span, .hero-description, .hero-cta');
      elements.forEach(el => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
        el.style.filter = 'blur(0)';
      });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Partnership",
  "class": "hero-partnership-section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Recommended size: 2000x2000px or larger"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Powering the Future of"
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2 (Italic)",
      "default": "Beauty, Together."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Join the ecosystem where creators, brands, and retailers connect through intelligent beauty technology."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "BECOME A PARTNER"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Hero Partnership"
    }
  ]
}
{% endschema %}
