<link rel="preload" as="image" href="{{ section.settings.hero_image | image_url: width: 2000 }}">
<link rel="preload" as="image" href="{{ section.settings.hero_image_mobile | image_url: width: 1000 }}">

<section class="hero-partnership-wrapper" id="heroPartnership">
  {% if section.settings.hero_image != blank %}
  <img 
    class="hero-image-desktop" 
    src="{{ section.settings.hero_image | image_url: width: 2000 }}" 
    alt="{{ section.settings.image_alt | default: 'Hero Image' }}"
    loading="eager"
  >
  {% endif %}
  
  {% if section.settings.hero_image_mobile != blank %}
  <img 
    class="hero-image-mobile" 
    src="{{ section.settings.hero_image_mobile | image_url: width: 1000 }}" 
    alt="{{ section.settings.image_alt | default: 'Hero Image' }}"
    loading="eager"
  >
  {% endif %}

  <div class="hero-partnership-content">
    <h1>
      <span class="first-line">{{ section.settings.heading_line_1 }}</span>
      <span class="second-line">{{ section.settings.heading_line_2 }}</span>
    </h1>
    <p class="hero-description">{{ section.settings.description }}</p>
    <div class="hero-cta-wrapper">
      <a href="{{ section.settings.cta_link }}" class="hero-cta">{{ section.settings.cta_text }}</a>
    </div>
  </div>
</section>

<style>
  .hero-partnership-wrapper {
    position: relative;
    height: 150vh;
    overflow: hidden;
    padding: 0;
  }

  /* Desktop image: full height, covers entire section, hidden on mobile */
  .hero-image-desktop {
    pointer-events: none;
    position: absolute;
    inset: 0;
    right: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile image: 75% height from top, visible only on mobile, z-index 10 */
  .hero-image-mobile {
    pointer-events: none;
    position: absolute;
    right: 0;
    width: 100%;
    top: 0;
    height: 75%;
    object-fit: cover;
    display: none;
    z-index: 10;
  }

  /* Content: centered horizontally, top-36 on desktop */
  .hero-partnership-content {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 144px; /* top-36 = 9rem = 144px */
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .hero-partnership-content h1 {
    font-weight: 100; /* font-thin */
    color: #ffffff;
    line-height: 1.2;
    letter-spacing: -0.01em;
    font-size: clamp(28px, 4vw, 96px);
    text-align: center;
    margin: 0;
  }

  .hero-partnership-content h1 span {
    display: block;
    opacity: 0;
    filter: blur(10px);
    transform: translateY(50px);
  }

  .hero-description {
    margin-top: 16px; /* mt-4 */
    color: #ffffff;
    line-height: 1.2;
    font-weight: 100; /* font-thin */
    font-size: 18px; /* md:text-lg */
    text-align: center;
    opacity: 0;
    transform: translateY(50px);
    filter: blur(10px);
  }

  .hero-description br {
    display: block;
  }

  .hero-cta-wrapper {
    margin-top: 24px; /* mt-6 */
    opacity: 0;
    transform: translateY(50px);
    filter: blur(10px);
  }

  .hero-cta {
    display: inline-block;
    padding: 16px 28px; /* py-4 px-7 */
    border-radius: 9999px;
    background: #e7aeb1; /* bg-primary-pink */
    color: white;
    font-size: 14px; /* text-sm */
    font-weight: 100; /* font-thin */
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s;
  }

  .hero-cta:hover {
    background: rgba(231, 174, 177, 0.6); /* hover:bg-primary-pink/60 */
  }

  /* Mobile styles: max-md breakpoint */
  @media screen and (max-width: 768px) {
    .hero-partnership-wrapper {
      height: 120vh; /* max-md:h-[120vh] */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 24px; /* max-md:pt-6 */
    }

    /* Hide desktop image on mobile */
    .hero-image-desktop {
      display: none;
    }

    /* Show mobile image on mobile */
    .hero-image-mobile {
      display: block;
    }

    .hero-partnership-content {
      position: static;
      transform: none;
      padding: 0 12px; /* max-md:px-3 */
      margin-top: 24px; /* max-md:mt-6 */
      top: 64px; /* max-md:top-16 */
    }

    .hero-description {
      font-size: 12px; /* max-md:text-xs */
    }

    .hero-description br {
      display: none; /* max-md:hidden on br */
    }

    .hero-cta-wrapper {
      margin-top: 32px; /* max-md:mt-8 */
    }

    .hero-cta {
      font-size: 12px; /* max-md:text-xs */
    }
  }

  /* Tablet styles for md breakpoint */
  @media screen and (min-width: 769px) {
    .hero-partnership-wrapper {
      padding: 0 112px; /* md:px-28 = 7rem = 112px */
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof gsap !== 'undefined') {
      // Animate heading lines with delays matching React (0.4s, 0.4s base + stagger)
      gsap.to(".hero-partnership-content h1 span.first-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.4
      });

      gsap.to(".hero-partnership-content h1 span.second-line", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.4
      });

      // Animate description (delay 0.6s in React)
      gsap.to(".hero-partnership-content .hero-description", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 0.6
      });

      // Animate CTA button (delay 1.0s in React)
      gsap.to(".hero-partnership-content .hero-cta-wrapper", {
        opacity: 1,
        y: 0,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.inOut",
        delay: 1.0
      });
    } else {
      // Fallback if GSAP is not loaded
      const elements = document.querySelectorAll('.hero-partnership-content h1 span, .hero-description, .hero-cta-wrapper');
      elements.forEach(el => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
        el.style.filter = 'blur(0)';
      });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Partnership",
  "class": "hero-partnership-section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (Desktop)",
      "info": "Recommended size: 2000x2000px or larger. Visible on desktop only."
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero Image (Mobile)",
      "info": "Recommended size: 1000x1500px. Visible on mobile only, covers top 75% of section."
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Powering the Future of"
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2",
      "default": "Beauty, Together."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Join the ecosystem where creators, brands, and retailers connect through intelligent beauty technology."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "BECOME A PARTNER"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Hero Partnership"
    }
  ]
}
{% endschema %}
