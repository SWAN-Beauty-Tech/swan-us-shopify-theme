<div class="future-section">
  <div class="future-container">
    <div class="future-content">
      
      <!-- Title -->
      <h1 class="future-title">
        {{ section.settings.title }}
      </h1>
      
      <!-- Description -->
      <p class="future-description">
        {{ section.settings.description }}
      </p>
      
      <!-- CTA Button -->
      <div class="future-cta-wrapper">
        <a 
          href="{{ section.settings.cta_link }}" 
          aria-label="{{ section.settings.cta_text }}"
          class="future-cta-button"
        >
          {{ section.settings.cta_text }}
        </a>
      </div>
      
    </div>
  </div>
</div>

<style>
  /* Container styles */
  .future-section {
    width: 100%;
    height: 60vh;
    padding: 24px;
  }
  
  .future-container {
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #e7aeb1;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .future-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  /* Title styles */
  .future-title {
    color: white;
    font-size: 48px;
    font-weight: 100;
    line-height: 1;
    filter: blur(40px);
    padding:0;
    margin:0;
    margin-bottom:24px;
  }
  
  /* Description styles */
  .future-description {
    font-size: 16px;
    color: white;
    line-height: 1.5;
    filter: blur(40px);
    padding:0;
    margin:0;
    margin-bottom:24px;
  }
  
  /* CTA wrapper */
  .future-cta-wrapper {
    filter: blur(40px);
  }
  
  /* CTA Button styles */
  .future-cta-button {
    display: inline-block;
    padding: 16px 28px;
    border-radius: 9999px;
    background-color: #434043;
    color: white;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  
  .future-cta-button:hover {
    background-color: rgba(67, 64, 67, 0.6);
  }
  
  /* Mobile responsive styles */
  @media (max-width: 768px) {
    .future-content {
      padding: 0 16px;
    }
    .future-title {
      font-size: 22px;
    }
    .future-description {
      font-size: 12px;
      line-height: 1.2;
    }
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    gsap.registerPlugin(ScrollTrigger);
    
    const titleElement = document.querySelector('.future-title');
    const descriptionElement = document.querySelector('.future-description');
    const ctaElement = document.querySelector('.future-cta-wrapper');
    
    if (titleElement && descriptionElement && ctaElement) {
      gsap.to([titleElement, descriptionElement, ctaElement], {
        scrollTrigger: {
          trigger: titleElement,
          scrub: 1,
          start: "top 100%",
          end: "bottom 70%",
        },
        filter: "blur(0px)",
      });
    }
  });
</script>

{% schema %}
{
  "name": "Future Section",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Let's Shape the Future of Beautyâ€”Together."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Partner with SWAN to innovate, grow, and connect."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Let's SWAN"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Future Section"
    }
  ]
}
{% endschema %}
