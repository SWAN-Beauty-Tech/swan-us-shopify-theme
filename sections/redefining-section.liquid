<section class="redefining-section" id="redefiningSection">
  <div class="redefining-container">
    <div class="redefining-content">
      <h1 class="redefining-title">{{ section.settings.title }}</h1>
      <p class="redefining-description">{{ section.settings.description }}</p>
      <div class="redefining-cta-wrap">
        <a href="{{ section.settings.cta_link }}" class="redefining-cta">{{ section.settings.cta_text }}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .redefining-section {
    width: 100%;
    height: 60vh;
    padding-bottom: 24px;
    padding-left: 24px;
    padding-right: 24px;
    margin: 24px 0 0 0;
  }

  .redefining-container {
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #434043;
    border-radius: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .redefining-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 32px;
    padding: 0 24px;
  }

  .redefining-title {
    color: #ffffff;
    font-size: 18px;
    font-weight: 100;
    line-height: 1;
    margin: 0;
    filter: blur(32px);
    opacity: 0;
  }

  .redefining-description {
    color: #ffffff;
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
    filter: blur(32px);
    opacity: 0;
  }

  .redefining-description br {
    display: block;
  }

  .redefining-cta-wrap {
    filter: blur(32px);
    opacity: 0;
  }

  /* CTA button matching hero section style */
  .redefining-cta {
    display: inline-block;
    background: #e7aeb1;
    padding: 16px 28px;
    border-radius: 9999px;
    text-decoration: none;
    color: white;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: background 0.3s ease;
  }

  .redefining-cta:hover {
    background: rgba(231, 174, 177, 0.6);
  }

  /* Desktop styles */
  @media screen and (min-width: 769px) {
    .redefining-title {
      font-size: 48px;
    }
  }

  /* Mobile styles */
  @media screen and (max-width: 768px) {
    .redefining-section {
      padding-top: 0;
    }

    .redefining-description {
      font-size: 12px;
      line-height: 1.5;
    }

    .redefining-description br {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
      gsap.registerPlugin(ScrollTrigger);

      const title = document.querySelector('.redefining-title');
      const description = document.querySelector('.redefining-description');
      const ctaWrap = document.querySelector('.redefining-cta-wrap');

      // Animate all elements together with ScrollTrigger
      gsap.to([title, description, ctaWrap], {
        scrollTrigger: {
          trigger: title,
          scrub: 1,
          start: 'top 100%',
          end: 'bottom 70%',
        },
        filter: 'blur(0px)',
        opacity: 1,
        duration: 1,
        ease: 'none',
      });
    } else {
      // Fallback if GSAP is not loaded
      const elements = document.querySelectorAll('.redefining-title, .redefining-description, .redefining-cta-wrap');
      elements.forEach((el) => {
        el.style.opacity = '1';
        el.style.filter = 'blur(0)';
      });
    }
  });
</script>

{% schema %}
{
  "name": "Redefining Section",
  "class": "redefining-section-wrapper",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Redefining how beauty connects."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "SWAN unites creators, brands, and retailers through an AI-powered smart mirror <br> and community platformâ€”transforming personalized beauty experiences <br> and offering tools to grow reach, engagement, and impact."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Let's Connect"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Redefining Section"
    }
  ]
}
{% endschema %}
